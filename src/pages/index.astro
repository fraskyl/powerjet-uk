---
import Layout from "../layouts/Layout.astro";
import CTABanner from "../components/CTABanner.astro";
import TextBlock from "../components/TextBlock.astro";
import Card from "../components/Card.astro";
import Footer from "../components/Footer.astro";
import SectionTitle from "../components/SectionTitle.astro";
import Divider from "../components/Divider.astro";
import ApplicationCarousel from "../components/ApplicationCarousel.astro";
---

<Layout title="Powerjet Rentals UK">
	<div class="section__product span-full">
		<div class="section__product__text">
			<SectionTitle
				Headline="Discover our products"
				HeadingSize="regular"
			/>
			<TextBlock
				BodyCopy="We offer a  comprehensive fleet of High-Pressure (HP) and Ultra-High Pressure (UHP) jetting units, complemented by specialised accessories."
			/>
		</div>

		<div class="section__product__cards">
			<Card
				imgSrc="/src/assets/New_Image_Magtrack-lrg.jpeg"
				imgAlt="MagTrack unit removing paint from the side of a ship's hull"
				hrefLink="/rentals"
				buttonLabel="Rentals"
			/>
			<Card
				imgSrc="/src/assets/New_Image_Magtrack-lrg.jpeg"
				imgAlt="MagTrack unit removing paint from the side of a ship's hull"
				hrefLink="/sales"
				buttonLabel="Sales"
			/>
		</div>
	</div>
	<ApplicationCarousel />
	<CTABanner />
	<Divider />
	<div class="section__about-us span-full">
		<SectionTitle Headline="About us" HeadingSize="regular" />
		<TextBlock
			BodyCopy="For over 20 years, Powerjet has been a trusted supplier of High-Pressure and Ultra High-Pressure Water Jetting Units, delivering complete solutions for the toughest industrial challenges."
		/>
	</div>
	<div class="section__partner-logo span-full">
		<SectionTitle Headline="Proud to partner with" HeadingSize="small" />
		<div class="grid__partner-logo">
			<img src="/src/assets/logos/partners/jetstream-logo-color.png" style="transform: scale(0.35);"/> 
		</div>
		<div class="grid__partner-logo">
			<img src="/src/assets/logos/partners/stoneage-logo-color.svg" />
		</div>
		<div class="grid__partner-logo">
			<img src="/src/assets/logos/partners/DERC Salotech.png" style="transform: scale(0.15);" />
		</div>
		<div class="grid__partner-logo">
			<img src="/src/assets/logos/partners/tetraCORE LOGO.png" style="transform: scale(0.15);" />
		</div>
		<div class="grid__partner-logo">
			<img src="/src/assets/logos/partners/tst_logotype_001_vertical_RGB.png" style="transform: scale(0.28);" />
		</div>
	</div>
</Layout>
<!-- <Footer /> -->

<style>
	.section__product {
		display: flex;
		flex-direction: row;
		gap: 1.5rem;
		margin-bottom: 7.75rem;
	}

	.section__product__text {
		display: flex;
		flex-direction: column;
	}

	.section__product__cards {
		display: flex;
		flex-direction: row;
		gap: 1.5rem;
	}

	.section__about-us {
		grid-column: 2 / 8;
		display: flex;
		flex-direction: column;
		margin-bottom: 7.75rem;
	}

	.section__partner-logo {
		display: flex;
		flex-direction: column;
		align-items: center;
		margin-top: 2rem;
		margin-bottom: 7.75rem;
	}

	.grid__partner-logo {
		grid-column: span 2 / span 2;
        gap: 2rem;
		justify-self: center;
		aspect-ratio: 3 / 1;
		overflow: hidden;
	}

	.grid__partner-logo img{
		object-fit: contain;
		height: 100%;
		width: 100%;
	}

	@media screen and (max-width: 768px) {
		.section__product {
			display: flex;
			flex-direction: column;
			gap: 1.5rem;
		}
	}
</style>
