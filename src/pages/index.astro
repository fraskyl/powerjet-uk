---
import Layout from "../layouts/Layout.astro";
import CTABanner from "../components/CTABanner.astro";
import ContentBlock from "../components/ContentBlock.astro";
import Card from "../components/Card.astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title="Powerjet Rentals UK">
	<div class="section__product">
		<ContentBlock
			SectionTitle="Discover our products"
			BodyCopy="We offer a  comprehensive fleet of High-Pressure (HP) and Ultra-High Pressure (UHP) jetting units, complemented by specialised accessories."
		/>
		<Card
			imgSrc="/src/assets/New_Image_Magtrack-lrg.jpeg"
			imgAlt="MagTrack unit removing paint from the side of a ship's hull"
			hrefLink="/rentals"
			buttonLabel="Rentals"
		/>
		<Card
			imgSrc="/src/assets/New_Image_Magtrack-lrg.jpeg"
			imgAlt="MagTrack unit removing paint from the side of a ship's hull"
			hrefLink="/sales"
			buttonLabel="Sales"
		/>
	</div>

	<CTABanner />
</Layout>

<style>
	.section__product {
		grid-column: 3 / 13; /* Skip first and last content column (inset by 1) */
		display: flex;
		flex-direction: row;
		gap: 1.5rem;
	}
</style>
