---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import ImageHero from "../components/ImageHero.astro";
import TextBlock from "../components/TextBlock.astro";
import SectionTitle from "../components/SectionTitle.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Powerjet Rentals UK</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400..700;1,400..700&display=swap"
            rel="stylesheet"
        />
    </head>
    <Header />
    <body>
        <div class="page-grid">
            <ImageHero
                imgSrc="/src/assets/New_Image_Magtrack-lrg.jpeg"
                imgAlt="MagTrack unit removing paint from the side of a ship's hull"
                PreviousPageUrl="/applications"
            />

            <div class="section__applications-details-wrapper">
                <div class="section__applications-details">
                    <SectionTitle Headline="Surface Preparation" HeadingSize="large" />
                    <TextBlock
                        BodyCopy="High-pressure and ultra high-pressure water jetting effectively prepares and clean surfaces, removing coatings, rust, and other stubborn residues."
                        fontSize="lede"
                    />
                    <TextBlock
                        BodyCopy="This method thoroughly cleans without causing damage or compromising the surface’s structural integrity. Powerjet offer automated solutions for increased productivity and safety. "
                        fontSize="regular"
                    />
                </div>
            </div>
        </div>
    </body>
    <Footer />

    <style>
        .section__applications-details-wrapper {
             grid-column: 2 / -2; /* Span the content columns of page grid */
            display: grid;
            grid-template-columns: subgrid; /* Inherit parent grid columns */
            margin-bottom: 3rem;
          
        }

        .section__applications-details {
            display: flex;
            flex-direction: column;
            grid-column: 1 / -1;

            gap: 1rem;
        }


        @media screen and (min-width: 768px) {
            .section__applications-details-wrapper {
                display: grid;
                grid-template-columns: subgrid;
                grid-column: 2 / -2;
                margin-bottom: 7.75rem;
            }

            .section__applications-details {
                display: flex;
                grid-column: 1 / 8 ;
                gap: 1rem;
            }
        }

        @media screen and (min-width: 1024px) {
            .section__applications-details-wrapper {
                display: grid;
                grid-template-columns: subgrid;
                grid-column: 2 / -2;
                margin-bottom: 7.75rem;
            }

            .section__applications-details {
                display: flex;
                grid-column: 1 / 9 ;
                gap: 1rem;
            }
        }
        
    </style>
</html>
