---
interface Props {
    imgSrc: string;
    imgAlt: string;
}



const { imgSrc } = Astro.props;
const { imgAlt } = Astro.props;

---

<div class="hero" id="hero__image">
        <img src={imgSrc} alt={imgAlt} />

</div>

<style>
    .hero {
        grid-column: 1 / -1;
        height: 30rem; /* Don't exceed 80% of viewport */
        overflow: hidden;
        position: relative;
        margin-bottom: 2rem;
        width: 100vw;

        /* Create inner grid matching parent */
        display: grid;
        grid-template-columns: 1rem repeat(4, 1fr) 1rem;
    }

    .hero img {
        grid-column: 1 / -1;
        grid-row: 1;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
    }

   

    @media screen and (min-width: 768px) {
        .hero {
            grid-column: 1 / -1;
            height: 642px;
            overflow: hidden;
            position: relative;
            margin-bottom: 2rem;

            /* Create inner grid matching parent */
            grid-template-columns:
                3rem
                repeat(12, 1fr)
                3rem;
        }
    }
</style>
