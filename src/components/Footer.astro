    <div class="footer__wrapper">
        <div class="footer__row">
            <div class="footer__left">
                <div class="footer__logo">
                    <a href="/">
                        <img
                            src="/src/assets/POWERJET HPWJS_Logo-white.svg"
                        /></a
                    >
                </div>
                <div class="footer__contact">
                    <p>Tel: + 44 (0) 141 440 5757</p>
                    <p>Email: mail@powerjet-uk.com</p>
                </div>
            </div>
            <div class="footer__right">
                <div class="footer__logo__right">
                    <a href="/"> <img src="/src/assets/Dark Logo.svg" /></a>
                </div>
                <div class="footer__logo__right">
                    <a href="/">
                        <img
                            src="/src/assets/Water Jetting Association.svg"
