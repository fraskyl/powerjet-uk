<style>
    /* footer styles */

    .footer__wrapper {
        height: 432px;
        display: flex;
        flex-direction: column;
        align-items: center;  
        justify-content: space-between;
        padding: 2rem 2rem;
        background-color: var(--pj_brand_blue);
        color: white;
        margin-top: 7.75rem;
    }

    .footer__row {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .footer__left {
        display: flex;
        flex-direction: column;
        align-items: left;
    }

    .footer__right {
        display: flex;
        flex-direction: row;
        align-items: left;
        gap: 1.5rem;
    }

    .footer__logo {
        grid-column: 1 / span 2;
        height: auto;
    }

    
    .footer__logo img {
        height: 64px;
    }

     .footer__logo__right {
        grid-column: 1 / span 2;
        height: auto;
    }

     .footer__logo__right img {
        height: 110px;
    }

    .footer__copyright p {
        align-items: center;
        font-family: "Instrument Sans";
        font-size: 12px;
        font-style: normal;
        font-weight: 300;
        line-height: 20px; /* 142.5% */
    }


</style>
