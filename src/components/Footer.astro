<style>
    /* footer styles */
    .footer {
        grid-column: 1 / 15;
    }

    .footer__wrapper {
        height: 432px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        padding: 2rem;
        background-color: var(--pj_brand_blue);
        color: white;
    }

    .footer__row {
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .footer__left {
        display: flex;
        flex-direction: column;
        align-items: left;
    }

    .footer__left p {
        font-family: "Instrument Sans";
        font-size: 1rem;
        line-height: 1.5rem;
    }

    .footer__right {
        display: flex;
        flex-direction: row;
        align-items: left;
        gap: 1.5rem;
    }

    .footer__logo {
        grid-column: 1 / span 2;
        height: auto;
    }

    .footer__logo img {
        height: 64px;
    }

    .footer__logo__right {
        grid-column: 1 / span 2;
        height: auto;
    }

    .footer__logo__right img {
        height: 110px;
    }

    li{
        list-style: none;
    }

    a {
        color: white;
        text-decoration: none;
    }

    .footer__copyright {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        border-top: white 1px solid;
    }

    .footer__copyright p {
        font-family: "Instrument Sans";
        font-size: 12px;
        font-style: normal;
        font-weight: 300;
        line-height: 16px;
    }
</style>
