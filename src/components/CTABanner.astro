---
import Button from "./Button.astro";
---

<div class="cta__banner__wrapper">
    <div class="cta__banner__content">
        <div class="cta__banner__text">
            <h2>WJA Training</h2>
            <p>
                We offer fully registered training with The Water Jetting
                Association, the benchmark for safety in the water jetting
                industry throughout the U.K.
            </p>
        </div>
        <Button href="/services" variant="secondary">Find out more</Button>
    </div>
    <div class="cta__banner__image">
        <img
            src="/src/assets/PJ-Screen-cap-tst-wash.png"
            alt="Power jetting operative wearing TST safety gear whilst operating power jet washer"
        />
    </div>
</div>

<style>
    .cta__banner__wrapper {
        grid-column: 3 / 13; /* Skip first and last content column (inset by 1) */
        display: flex;
        height: 335px;
        flex-direction: row;
        align-items: left;
        justify-content: space-between;
        background-color: var(--pj_brand_blue);
        color: white;
        border-radius: 0.25rem;
        gap: 2rem;
    }

    .cta__banner__content {
        display: flex;
        flex: 1;
        padding: 2rem;
        flex-direction: column;
        justify-content: space-between;  /* Pushes text to top, button to bottom */
    }

    .cta__banner__image img {
        max-width: 1106px;
        width: 100%;
        height: 100%;
        border-radius: 0 0.25rem 0.25rem 0;

    }

    @media screen and (max-width: 768px) {
        .cta__banner__wrapper {
            grid-column: 4 / 12; /* Skip first and last content column (inset by 1) */
            flex-direction: column;
            text-align: left;
        }

        .cta__banner__image img {
            max-width: 100%;
        }
    }
</style>
