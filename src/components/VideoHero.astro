<div class="hero" id="hero__video">
    <video autoplay muted loop playsinline>
        <source
            src="/src/assets/PJ-Quick-Edit-for-web-mockup.mp4"
            type="video/mp4"
        />
    </video>

    <div class="hero__headline span-full">
        <h1>High-Pressure and Ultra High-Pressure Water Jetting Equipment</h1>
    </div>
</div>

<style>
    .hero {
        grid-column: 1 / -1;
        max-height: 40rem; /* Don't exceed 80% of viewport */
        overflow: hidden;
        position: relative;
        margin-bottom: 4rem;
         width: 100vw;

        /* Create inner grid matching parent */
        display: grid;
        grid-template-columns: 1rem repeat(4, 1fr) 1rem;
    }

    .hero__headline {
        grid-column: 2 / -2; /* Now this works with grid! */
        grid-row: 1;
        align-self: end;
        margin-bottom: 2rem;
        color: white;
        text-align: left;
        z-index: 1;
    }

    #hero__video video {
        grid-column: 1 / -1;
        grid-row: 1;
        width: 100%;
        height: 642px;
        object-fit: cover;
        z-index: 0;
    }

    @media screen and (min-width: 768px) {
        .hero {
            grid-column: 1 / -1;
            height: 642px;
            overflow: hidden;
            position: relative;
            margin-bottom: 7.75rem;

            /* Create inner grid matching parent */
            grid-template-columns:
                3rem
                repeat(12, 1fr)
                3rem;
        }

        .hero__headline {
            grid-column: 2 / 9;
        }
    }
</style>
