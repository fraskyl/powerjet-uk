---
interface Props {
    imgSrc: string;
    imgAlt: string;
    hrefLink: string;
    buttonLabel: string;
    icon?: boolean;
    style?: "light" | "dark";

}

const { imgSrc } = Astro.props;
const { imgAlt } = Astro.props;

const { hrefLink } = Astro.props;
const { buttonLabel } = Astro.props;

const { icon = true } = Astro.props;

const { style = "dark" } = Astro.props;

---

<link
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
    rel="stylesheet"
/>

<div class="card__wrapper">
    <a href={hrefLink} class="card__link">
    <div class="card__wrapper">
        <div class="image__container">
            <img src={imgSrc} alt={imgAlt} />
        </div>
        <div class="card__panel" data-variant={style} data-variant={icon}>
            {buttonLabel}
            {icon === true && (
        <span class="material-symbols-outlined">arrow_forward</span>
    )}
            
        </div>
    </div>
</a>
</div>

<style>

     .card__link {
        text-decoration: none;
        color: inherit;
    }

    .card__wrapper {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        width: 100%;
        height: auto;
        border_radius: 0.25rem;
    }

    .image__container {
        width: 100%;
        aspect-ratio: 4:3;
        overflow: hidden;
        border-radius: 0.25rem 0.25rem 0 0;
    }

    .image__container img {
        object-fit: cover;
        display: block;
        width: 100%;
        height: auto;
        transition: all 0.3s ease-in-out;
    }

    .card__panel {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        background-color: var(--pj_brand_blue);
        padding: 0.5rem 1.5rem;
        height: 64px;
        width: 100%;
        border-radius: 0 0 0.25rem 0.25rem;

        font-family: "Instrument Sans";
        font-size: 18px;
        font-style: normal;
        font-weight: 400;
        line-height: 28px; /* 155.556% */
        letter-spacing: -0.306px;
        color: white;
    }


     /* Light variant */
    .card__panel[data-variant="light"] {
        background-color: var(--pj_blue_10);
        color: var(--pj_brand_blue);
    }

     .card__panel[data-variant="light"] .material-symbols-outlined {
        color: var(--pj_brand_blue);
    }

    .material-symbols-outlined {
        font-variation-settings:
            "FILL" 0,
            "wght" 400,
            "GRAD" 0,
            "opsz" 24;
        color: currentColor; /* Inherits from .card__panel */
    }

    /* Hover states */
    .card__wrapper:hover .card__panel {
        background-color: var(--pj_blue_90);
    }

    .card__wrapper:hover .card__panel[data-variant="light"] {
        background-color: var(--pj_blue_20);
    }


     .card__panel .material-symbols-outlined {
    display: inline-flex;
}



    .card__wrapper:hover .card__panel {
        background-color: var(--pj_blue_90);
        transition: background-color 0.3s ease;
    }

    .card__wrapper:hover .image__container img {
        transform: scale(1.05); /* Zoom in effect */
    }

    .material-symbols-outlined {
        font-variation-settings:
            "FILL" 0,
            "wght" 400,
            "GRAD" 0,
            "opsz" 24;
        color: white;
    }

    @media screen and (min-width: 768px) {
        .card__wrapper {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            width: 100%;
            height: 100%;
            border_radius: 0.25rem;
        }


    }
</style>
