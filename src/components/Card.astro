---
interface Props {
    imgSrc: string;
    imgAlt: string;
    hrefLink: string;
    buttonLabel: string;
    icon?: "true" | "false";
}

const { imgSrc } = Astro.props;
const { imgAlt } = Astro.props;

const { hrefLink } = Astro.props;
const { buttonLabel } = Astro.props;

const { icon = "true" } = Astro.props;
---

<link
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
    rel="stylesheet"
/>

<div class="card__wrapper">
    <a href={hrefLink}>
        <div class="image__container">
            <img src={imgSrc} alt={imgAlt} />
        </div>
        <a href={hrefLink}>
            <div class="card__panel" data-variant={icon}>
                {buttonLabel}
                <span class="material-symbols-outlined">arrow_forward</span>
            </div>
        </a>
    </a>
</div>

<style>
    .card__wrapper {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        width: 100%;
        height: auto;
        border_radius: 0.25rem;
    }

    .image__container {
        width: 100%;
        height: 300px;
        overflow: hidden;
        border-radius: 0.25rem 0.25rem 0 0;
    }

    .image__container img {
        object-fit: cover;
        width: 100%;
        height: 100%;
        transition: all 0.3s ease-in-out;
    }

    .card__panel {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        background-color: var(--pj_brand_blue);
        padding: 0.5rem 1.5rem;
        height: 64px;
        width: 100%;
        border-radius: 0 0 0.25rem 0.25rem;
    }


     .card__panel span [data-variant="true"] {
        display: flex;
    }

    .card__panel span [data-variant="false"] {
        display: none;
    }

    .card__wrapper a {
        font-family: "Instrument Sans";
        font-size: 18px;
        font-style: normal;
        font-weight: 400;
        line-height: 28px; /* 155.556% */
        letter-spacing: -0.306px;
        color: white;
        margin: 0;
        text-decoration: none;
    }

    .card__wrapper:hover .card__panel {
        background-color: var(--pj_blue_90);
        transition: background-color 0.3s ease;
    }

    .card__wrapper:hover .image__container img {
        transform: scale(1.05); /* Zoom in effect */
    }

    .material-symbols-outlined {
        font-variation-settings:
            "FILL" 0,
            "wght" 400,
            "GRAD" 0,
            "opsz" 24;
        color: white;
    }

    @media screen and (min-width: 768px) {
        .card__wrapper {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            width: 100%;
            height: 456px;
            border_radius: 0.25rem;
        }

        .image__container {
            width: 100%;
            height: 400px;
            overflow: hidden;
            border-radius: 0.25rem 0.25rem 0 0;
        }

    }
</style>
