---
interface Props {
    imgSrc: string;
    imgAlt: string;
    hrefLink: string;
    applicationTitle: string;
}

const { imgSrc } = Astro.props;
const { imgAlt } = Astro.props;

const { hrefLink } = Astro.props;
const { applicationTitle } = Astro.props;
---

<link
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
    rel="stylesheet"
/>

<a href={hrefLink} class="application-carousel__slide-wrapper">
    <div class="application-carousel__slide-image-wrapper">
        <img src={imgSrc} alt={imgAlt} />
    </div>
    <div class="application-carousel__slide-content-wrapper">
        {applicationTitle}
    </div>

    <style>
        a {
            text-decoration: none;
        }

        .application-carousel__slide-wrapper {
            display: flex;
            flex-direction: column;
            flex-shrink: 0;
            margin-top: 1.5rem;
            width: 280px;
        }

        .application-carousel__slide-image-wrapper {
            overflow: hidden;
            border-radius: 0.25rem;
            aspect-ratio: 280 / 360;
        }

        .application-carousel__slide-image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: all 0.3s ease-in-out;
        }

        .application-carousel__slide-wrapper:hover
            .application-carousel__slide-image-wrapper
            img {
            transform: scale(1.05); /* Zoom in effect */
        }

        .application-carousel__slide-wrapper:hover
            .application-carousel__slide-content-wrapper {
            color: var(--pj_blue_70);
        }

        .application-carousel__slide-content-wrapper {
            display: flex;
            margin-top: 1rem;
            color: black;
            font-family: "Instrument Sans";
            font-size: 1.25rem;
            font-weight: 400;
            letter-spacing: -0.306px;
        }
    </style>
</a>
