---
/**
 * BuildOptions.astro
 *
 * Displays available product build/configuration options.
 *
 * Props:
 *   - options: Array of objects with code and description
 *
 * Example usage:
 *   {hasBuildOptions && buildOptions && (
 *     <BuildOptions options={buildOptions} />
 *   )}
 */
import Accordion from "../Layout/Accordion.astro";
import RichText from "../Content/RichText.astro";

interface Props {
  options: {
    optionTitle?: string;
    description?: string;
  }[];
}

const { options } = Astro.props;

// Handle empty or missing data gracefully
if (!options || options.length === 0) {
  return null;
}
---

<section class="build-options__container">
  <!-- Mobile: With Accordion -->
  <div class="mobile-only">
    <Accordion defaultOpen={true}>
      <h2 slot="title">Build Options</h2>
      <div class="build-options__list">
        {
          options.map((option) => (
            <div class="build-option__item">
              <div class="build-option__header">
                <h3 class="build-option__title">
                  {option.optionTitle || "Option"}
                </h3>
              </div>
              {option.description && (
                <RichText
                  value={option.description}
                  className="build-option__description"
                />
              )}
            </div>
          ))
        }
      </div>
    </Accordion>
  </div>

  <!-- Desktop: No Accordion -->
  <div class="desktop-only">
    <h2>Build Options</h2>
    <div class="build-options__list">
      {
        options.map((option) => (
          <div class="build-option__item">
            <div class="build-option__header">
              <h3 class="build-option__title">
                {option.optionTitle || "Option"}
              </h3>
            </div>
            {option.description && (
              <RichText
                value={option.description}
                className="build-option__description"
              />
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* Mobile: Show accordion only */
  .mobile-only {
    display: block;
  }
  .desktop-only {
    display: none;
  }

  .build-options__container {
    grid-column: 2 / -2;
    margin-bottom: 6rem;
  }

  .build-options__container h2 {
    font-size: 1.5rem;
    font-weight: 450;
    color: var(--pj_blue_80);
  }

  .build-options__list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .build-option__header {
    margin-bottom: 0.5rem;
  }

  .build-option__title {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--pj_blue_80);
    letter-spacing: 0.5px;
  }

  .build-option__description {
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--pj_blue_70);
  }

  @media screen and (min-width: 768px) {
    /* Desktop: Show regular content */
    .mobile-only {
      display: none;
    }
    .desktop-only {
      display: block;
    }

    .build-options__container {
      grid-column: 3 / -3;
      margin-bottom: 7.75rem;
    }

    .build-options__container h2 {
      margin-bottom: 2rem;
    }

    .build-options__list {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .build-option__description {
      font-size: 0.875rem;
    }
  }
</style>
