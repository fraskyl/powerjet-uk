---
interface Props {
    SectionTitle: string;
    BodyCopy: string;
}

const { SectionTitle } = Astro.props;
const { BodyCopy } = Astro.props;
--- 
<div class="content__block">
    <div class="section__title">
        <h2>{SectionTitle}</h2>
    </div>
    <div class="body__copy">
       <p>{BodyCopy}</p>
    </div>
</div>

<style>
    .content__block {
        grid-column: 3 / 7; /* Skip first and last content column (inset by 1) */
        height: 335px;
        align-items: left;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-top: 7.75rem;
        height: auto;
    }

    .section__title h2 {
        font-family: "Instrument Sans";
        font-size: 32px;
        font-style: normal;
        font-weight: 600;
        line-height: 40px; /* 125% */
        letter-spacing: -0.544px;
        color: var(--core-pj-blue-90, #0b1212);
        margin: 0;
    }

    .body__copy p {
        font-family: "Instrument Sans";
        font-size: 18px;
        font-style: normal;
        font-weight: 400;
        line-height: 28px; /* 155.556% */
        letter-spacing: -0.306px;
        color: var(--core-pj-blue-80, #1f2a2a);
        margin: 0;
    }
    
</style>