---
interface Props {
    SectionTitle: string;
    BodyCopy: string;
    width?: "compact" | "regular";
    HeadingSize?: "small" | "regular";
}

const { SectionTitle } = Astro.props;
const { BodyCopy } = Astro.props;
const { width = "regular" } = Astro.props;
const { HeadingSize = "regular" } = Astro.props;
--- 
<div class="content__block" data-variant={width}>
    <div class="section__title" data-variant={HeadingSize}>
        <h2>{SectionTitle}</h2>
    </div>
    <div class="body__copy">
       <p>{BodyCopy}</p>
    </div>
</div>

<style>
    .content__block {
        display: flex;
        flex-direction: column;
        align-items: left;
        gap: 1.5rem;
        height: auto;
    }

    .content__block[data-variant="regular"] {
        grid-column: 3 / 8;
    }

    .content__block[data-variant="wide"] {
        grid-column: 3 / 8;
    }

    .section__title h2 {
        font-family: "Instrument Sans";
        font-style: normal;
        font-weight: 500;
        line-height: 40px; /* 125% */
        letter-spacing: -1.5%;
        color: var(--core-pj-blue-90, #0b1212);
        margin: 0;
    }

    .section__title[data-variant="small"] h2 {
        font-size: 1.125rem;
    }

     .section__title[data-variant="regular"] h2 {
        font-size: 2rem;
    }

    .body__copy p {
        font-family: "Instrument Sans";
        font-size: 18px;
        font-style: normal;
        font-weight: 400;
        line-height: 28px; /* 155.556% */
        letter-spacing: -0.306px;
        color: var(--core-pj-blue-80, #1f2a2a);
        margin: 0;
        text-wrap: ;
    }
    
</style>