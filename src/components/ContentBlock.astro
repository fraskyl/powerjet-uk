---
import Button from "./Button.astro";
import RichText from "./RichText.astro"

interface Props {
    title: string,
    description: any,
    imageURL: string;
    imageAlt: string;
    imagePosition: "left" | "right";
    showCTA?: boolean;
    ctaLabel?: string;
    ctaLink?: string;
}
    
    const {
        title,
        description,
        imageURL,
        imageAlt,
        imagePosition = 'right',
        showCTA = false,
        ctaLabel = 'Find out more',
        ctaLink = '/contact'
    } = Astro.props


// Temporarily log to see structure
console.log('Description data:', JSON.stringify(description, null, 2));

---

<div class="content__block__wrapper" data-image-position={imagePosition}>
    <div class="content__block-body">
        <div class="content__block-body-text">
            <h2>{title}</h2>
             <RichText value={description} className="prose-slate" />
        </div>
        {showCTA && (
        <div class="content__block-body-cta">
            <Button href={ctaLink} variant="tertiary">{ctaLabel}</Button>
        </div>
        )}
    </div>
    <div class="content__block-media">
        <img
            src={imageURL}
            alt={imageAlt}
        />
    </div>
</div>

<style>
    .content__block__wrapper {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .content__block-body {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        order: 2; /* Text comes after image on mobile */
    }

    .content__block-body-text {
        display: flex;
        flex-direction: column;
        gap: var(--space-4);
    }

    .content__block-body-text h2 {
        font-weight: 450;
        font-size: 1.6rem;
        color: var(--pj_blue_80);
        margin: 0;
    }

    .content__block-body-text p {
        font-size: 1rem;
        line-height: 1.5rem;
        margin: 0;
    }

    .content__block-media {
        aspect-ratio: 16 / 9;
        overflow: hidden;
        border-radius: 0.25rem;
        order: 1; /* Image comes first on mobile */
    }

    .content__block-media img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .content__block-body-cta [data-variant="true"] {
        display: inline-block;
    }

    .content__block-body-cta [data-variant="false"] {
        display: none;
    }

    /* Tablet and Desktop */
    @media (min-width: 768px) {
        .content__block__wrapper {
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            margin-bottom: 7.75rem;
            min-height: 22rem;
        }

        /* Default: Image on right (text left) */
        .content__block__wrapper[data-image-position="right"] .content__block-body {
            order: 1;
        }

        .content__block__wrapper[data-image-position="right"] .content__block-media {
            order: 2;
        }

        /* Image on left (text right) */
        .content__block__wrapper[data-image-position="left"] .content__block-body {
            order: 2;
        }

        .content__block__wrapper[data-image-position="left"] .content__block-media {
            order: 1;
        }

       
        .content__block-body {
            order: 1;
        }

         .content__block-body-text {
        padding-top: 2rem;

        }

        .content__block-body-text h2 {
        font-size: 2rem;
        
    }

        .content__block-media {
            order: 2;
            aspect-ratio: 3 / 2;
        }
    }
</style>